#include <stdio.h>

int main() {
  int a[10],n,i,min,max;
  printf(" enter array size:");
  scanf("%d",&n);
  printf("\nenter array elements:");
  for(i=0;i<n;i++)
  {
      scanf("%d",&a[i]);
  }
  max=a[0];
  min=a[0];
  for(i=0;i<n;i++)
   {
       if(a[i]>max)
       {
          max=a[i];
       }
       if(a[i]<min)
       {
           min=a[i];
       }
  }
  printf("\nthe  maximum number in array is :%d",max);
  printf("\nthe  minimum number in array is :%d",min);
    return 0;
}
