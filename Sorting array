
#include <stdio.h>

int main() {
  int a[10],i,n,j,temp;
  printf("enter array size:");
  scanf("%d",&n);
  printf("enter elements of array:");
  for(i=0;i<n;i++)
  {
      scanf("%d",&a[i]);
  }
  for(i=0;i<n;i++)
  {
      for(j=i+1;j<n;j++)
      {
        if(a[i]>a[j])  
        {
            temp=a[i];
            a[i]=a[j];
            a[j]=temp;
        }
      }
      
  }
  for(i=0;i<n;i++)
  {
      printf("%d",a[i]);
  }

    return 0;
}



#include <stdio.h>

int main() {
  int a[10],i,n,j,temp;
  printf("enter array size:");
  scanf("%d",&n);
  printf("enter elements of array:");
  for(i=0;i<n;i++)
  {
      scanf("%d",&a[i]);
  }
  for(i=0;i<n;i++)
  {
      for(j=i+1;j<n;j++)
      {
        if(a[j]>a[i])  
        {
            temp=a[i];
            a[i]=a[j];
            a[j]=temp;
        }
      }
      
  }
  for(i=0;i<n;i++)
  {
      printf("%d",a[i]);
  }

    return 0;
}
