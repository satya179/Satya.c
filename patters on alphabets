#include <stdio.h>

int main()
{
    int i,j,row;
    printf("enter no.of rows:");
    scanf("%d",&row);
    for(i=0;i<row;i++)
    {
        for(j=0;j<=i;j++)
        {
            printf("%c\t",'A'+i);
        }
        printf("\n");
    }
    return 0;
}
#include <stdio.h>

int main() {
    int i,j,row;
    printf("enter no.of rows:");
    scanf("%d",&row);
    for(i=0;i<row;i++)
    {
        for(j=0;j<=i;j++)
        {
            printf("%c\t",'Z'-i);
        }
        printf("\n");
    }
    return 0;
}

#include <stdio.h>

int main()
{
    int i,j,row;
    printf("enter no.of rows:");
    scanf("%d",&row);
    for(i=0;i<row;i++)
    {
        for(j=0;j<=i;j++)
        {
            printf("%c\t",'A'+j);
        }
        printf("\n");
    }
    return 0;
}

#include <stdio.h>

int main() {
    int i,j,row;
    printf("enter no.of rows:");
    scanf("%d",&row);
    for(i=0;i<row;i++)
    {
        for(j=0;j<=i;j++)
        {
            printf("%c\t",'Z'-j);
        }
        printf("\n");
    }
    return 0;
}

#include <stdio.h>

int main() {
    int i,j,row;
    char alphabet='A';
    printf("enter no.of rows:");
    scanf("%d",&row);
    for(i=0;i<row;i++)
    {
        for(j=0;j<=i;j++)
        {
            printf("%c\t",alphabet++);
        }
        printf("\n");
    }
    return 0;
}

#include <stdio.h>

int main() {
    int i,j,row;
    char alphabet='Z';
    printf("enter no.of rows:");
    scanf("%d",&row);
    for(i=0;i<row;i++)
    {
        for(j=0;j<=i;j++)
        {
            printf("%c\t",alphabet--);
        }
        printf("\n");
    }
    return 0;
}

#include <stdio.h>

int main() {
    int i,j,row;
    printf("enter no.of rows:");
    scanf("%d",&row);
    for(i=row;i>0;i--)
    {
        for(j=0;j<i;j++)
        {
            printf("%c\t",'Z'-j);
        }
        printf("\n");
    }
    return 0;
}
#include <stdio.h>

int main() {
    int i,j,row;
    printf("enter no.of rows:");
    scanf("%d",&row);
    for(i=row;i>0;i--)
    {
        for(j=0;j<i;j++)
        {
            printf("%c\t",'Z'-i);
        }
        printf("\n");
    }
    return 0;
}
